<!-- users.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <div class="row">
      <div class="col-md-2 bg-dark text-white p-4">
        <h3 class="text-center">
          <span class="text-danger">HPL</span><span>SHOP</span>
        </h3>
        <hr />
        <!-- Sidebar menu -->
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link text-white" href="/statistic">
              <i class="bi bi-pie-chart-fill me-2"></i>Quản lý thống kê
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/category">
              <i class="bi bi-tag-fill me-2"></i>Quản lý danh mục
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/product">
              <i class="bi bi-box-seam me-2"></i>Quản lý sản phẩm
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/user">
              <i class="bi bi-people-fill me-2"></i>Quản lý người dùng
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/order">
              <i class="bi bi-cart-fill me-2"></i>Quản lý đơn hàng
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/feedback">
              <i class="bi bi-chat-left-text-fill me-2"></i>Quản lý bình luận
            </a>
          </li>
        </ul>
        <hr />
        <div class="text-center">
          <a href="" class="btn btn-danger">Đăng xuất</a>
        </div>
      </div>
      <div class="col-md-10 p-0">
        <div
          class="shadow bg-danger text-white d-flex justify-content-between align-content-center p-3 pb-1"
        >
          <p>TRANG QUẢN TRỊ WEBSITE HPLSHOP</p>
          <div>
            <span>Admin</span>
            <img
              class="rounded m-1 border border-1 border-white"
              width="30px"
              height="30px"
              src="https://lh3.googleusercontent.com/a/AAcHTtdsW-6i09Wa-XNKWjkAjv7vrId4EIbE5Ggj3W_rA6_-18Q=s576-c-no"
              alt=""
            />
          </div>
        </div>
        <div class="row p-5">
          <h4>Quản lý người dùng</h4>
          <a
            href="/users/add"
            class="btn btn-primary"
            style="width: 150px; margin-left: 1000px"
            >Thêm người dùng</a
          >
          <table>
            <thead>
              <th>Email</th>
              <th>Họ và tên</th>
              <th>Ảnh đại diện</th>
              <th>Thao tác</th>
              <th>Trạng thái</th>
            </thead>
            <tbody>
              <% for(let user of users) { %>
              <tr>
                <td><%= user.email %></td>
                <td><%= user.fullname %></td>
                <td>
                  <img src="../images/<%= user.img %>" width="100px" alt="" />
                </td>
                <td>
                  <a class="btn btn-warning" href="/users/edit/<%= user.id %>">
                    <i class="bi bi-pencil-square"></i>
                  </a>
                  <a class="btn btn-danger" href="/users/delete/<%= user.id %>">
                    <i class="bi bi-trash3"></i>
                  </a>
                </td>
                <td>
                  <a href="/users/lock/<%= user.id %>">
                    <button type="button" class="btn btn-outline-danger">
                      <i class="bi bi-lock"></i>
                    </button>
                  </a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="bg-danger text-white text-center p-2">
      <p>@2024 by Lê Phát Hiện</p>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
